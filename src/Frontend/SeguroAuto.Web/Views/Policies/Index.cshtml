@model List<SeguroAuto.Web.Models.PolicyViewModel>
@{
    ViewData["Title"] = "Apólices";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Apólices</h2>
    <a asp-action="Create" class="btn btn-primary">Nova Apólice</a>
</div>

<div class="card">
    <div class="card-header">
        <form method="get" class="d-flex gap-2">
            <input type="number" name="customerId" value="@ViewBag.CustomerId" class="form-control" placeholder="ID do Cliente" style="max-width: 200px;" />
            <button type="submit" class="btn btn-secondary">Filtrar</button>
        </form>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Número da Apólice</th>
                        <th>Cliente ID</th>
                        <th>Placa</th>
                        <th>Prêmio</th>
                        <th>Início</th>
                        <th>Fim</th>
                        <th>Status</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var policy in Model)
                    {
                        <tr>
                            <td>@policy.PolicyNumber</td>
                            <td>@policy.CustomerId</td>
                            <td>@policy.VehiclePlate</td>
                            <td>@policy.Premium.ToString("C")</td>
                            <td>@policy.StartDate.ToString("dd/MM/yyyy")</td>
                            <td>@policy.EndDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <span class="badge @(policy.Status == "Active" ? "bg-success" : "bg-secondary")">
                                    @policy.Status
                                </span>
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-policyNumber="@policy.PolicyNumber" class="btn btn-sm btn-info">Detalhes</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">Nenhuma apólice encontrada.</p>
        }
    </div>
</div>

