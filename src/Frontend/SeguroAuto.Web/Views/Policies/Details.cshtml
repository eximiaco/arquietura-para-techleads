@model SeguroAuto.Web.Models.PolicyViewModel
@{
    ViewData["Title"] = "Detalhes da Apólice";
}

<h2>Detalhes da Apólice</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Número da Apólice</dt>
            <dd class="col-sm-9">@Model.PolicyNumber</dd>
            
            <dt class="col-sm-3">Cliente ID</dt>
            <dd class="col-sm-9">@Model.CustomerId</dd>
            
            <dt class="col-sm-3">Placa do Veículo</dt>
            <dd class="col-sm-9">@Model.VehiclePlate</dd>
            
            <dt class="col-sm-3">Prêmio</dt>
            <dd class="col-sm-9">@Model.Premium.ToString("C")</dd>
            
            <dt class="col-sm-3">Data de Início</dt>
            <dd class="col-sm-9">@Model.StartDate.ToString("dd/MM/yyyy")</dd>
            
            <dt class="col-sm-3">Data de Fim</dt>
            <dd class="col-sm-9">@Model.EndDate.ToString("dd/MM/yyyy")</dd>
            
            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.Status == "Active" ? "bg-success" : "bg-secondary")">
                    @Model.Status
                </span>
            </dd>
        </dl>
        
        <div class="mt-3">
            <a asp-controller="Claims" asp-action="Index" asp-route-policyNumber="@Model.PolicyNumber" class="btn btn-primary">Ver Sinistros</a>
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>
    </div>
</div>

