@model List<SeguroAuto.Web.Models.ClaimViewModel>
@{
    ViewData["Title"] = "Sinistros";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Sinistros - Apólice: @ViewBag.PolicyNumber</h2>
    <a asp-action="Create" asp-route-policyNumber="@ViewBag.PolicyNumber" class="btn btn-primary">Novo Sinistro</a>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Número do Sinistro</th>
                        <th>Apólice</th>
                        <th>Descrição</th>
                        <th>Valor</th>
                        <th>Data do Incidente</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.ClaimNumber</td>
                            <td>@claim.PolicyNumber</td>
                            <td>@claim.Description</td>
                            <td>@claim.Amount.ToString("C")</td>
                            <td>@claim.IncidentDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <span class="badge bg-info">@claim.Status</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">Nenhum sinistro encontrado para esta apólice.</p>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-controller="Policies" asp-action="Index" class="btn btn-secondary">Voltar para Apólices</a>
</div>

